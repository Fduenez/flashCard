<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FA0"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="40sp"
        android:gravity= "center"
        android:text="Who sang Spiderpig?"
        android:textColor="@android:color/black"
        android:background="@drawable/card_background"
        android:elevation="5dp"/>

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Homer Simpson!"
        android:background="@drawable/card_answer_background"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/answer_1"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="263dp"
        android:background="#FFFF"
        android:gravity="center"
        android:text="Peter Griffin"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/answer_2"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="133dp"
        android:background="#FFFF"
        android:gravity="center"
        android:text="Homer Simpson"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/answer_3"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:background="#FFFF"
        android:gravity="center"
        android:text="Cleveland Brown"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/answer_4"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="197dp"
        android:background="#FFFF"
        android:gravity="center"
        android:text="Glenn Quagmire"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_iconmonstr_eye_5" />

</RelativeLayout>